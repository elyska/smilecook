<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="smilecook.Views.MyRecipesPage"
             xmlns:model="clr-namespace:smilecook.Models"
             xmlns:viewmodel="clr-namespace:smilecook.ViewModels"
             x:DataType="viewmodel:MyRecipesViewModel"
             Title="MyRecipesPage">
    <ScrollView>
        
    <VerticalStackLayout>
        <Label Text="My Recipes" />
        <CollectionView ItemsSource="{Binding MyRecipes}"
                        SelectionMode="None">

            <CollectionView.EmptyView>
                <StackLayout>
                    <Label Text="You don't have any recipes." />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:MyRecipeImageSource">
                    <Grid>
                        <Label Grid.Column="0" Grid.RowSpan="2"  Text="{Binding Label}" />
                        <Image Source="{Binding ImgSource}" />
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>